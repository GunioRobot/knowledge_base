.comment{:id => "comment_#{comment.id}"}
  %hr
  .gravatar= gravatar_image_tag(comment.user.email)
  .delete
    - if can? :destroy, comment
      = button_to 'Elimina', fact_comment_path(@fact, comment), :confirm => "N'estas segur?", :method => :delete, :remote => true, :class => "button" |
  .metadata
    %h3= comment.user.name
    .sent Enviat fa #{time_ago_in_words(comment.created_at)}
  .text= to_md comment.text
