#fact-list
  %h2
    - if @is_search
      Resultats de cerca
    - else
      - if @tag
        Entrades del tag '#{@tag.capitalize}'
      - else
        Llista d'entrades
  #search-bar
    = form_tag facts_path, :method => "get" do
      = text_field_tag :search, @is_search || "Cerca aquí..."
    = link_to "javascript:doSearch();" do
      = image_tag "magnifier-search.png"
  #pagination= will_paginate @facts, :previous_label => "← Anterior", :next_label => "Següent →"
  - if @facts.empty?
    No hi ha entrades.
  - @facts.each do |fact|
    %hr
    .fact
      = gravatar_image_tag(fact.user.email)
      = link_to fact_path(fact, :anchor => "comments"), :class => "comments-link" do
        .comments-wrapper
          - nc = fact.comments.size
          - nc = "#{99}+" if nc > 99
          .comments= nc
      = link_to fact do
        .rest
          %h3= fact.title
          .metadata
            Creat
            fa #{time_ago_in_words(fact.created_at)} per
            = get_name_or_you(fact.user)
          .text= to_md(fact.description, :length => 500)
        .tags
          - fact.tags.each do |tag|
            .tag= link_to tag, facts_path(:tag => tag.name)

- content_for :custom_js do
  :javascript
    $("#search").focus(function(){
      if ($(this).val()=="Cerca aquí..."){
        $(this).val("");
      }
    });

    $("#search").blur(function(){
      if ($(this).val()==""){
        $(this).val("Cerca aquí...");
      }
    });
