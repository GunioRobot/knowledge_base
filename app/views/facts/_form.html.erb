<%= form_for @fact do |f| %>
  <% if @fact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fact.errors.count, "error") %> prohibited this fact from being saved:</h2>

      <ul>
      <% @fact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <h1 class='welcome'><%= f.text_field :title %></h1>
  <div class="gravatar"><%=gravatar_image_tag(@fact.new_record? ? "" : @fact.user.email)%></div>
  <div class="fact-metadata">
    <b><i>
      <% if @fact.new_record? %>
        View the <%= link_to 'complete list', root_path %>.
      <% else %>
        Created on <%= @fact.created_at %> by <%= get_name_or_you(@fact.user.name) %>.
        <% if @fact.user == current_user %>
          You can
          <%= link_to 'see', @fact, :confirm => "There are unsaved changes, are you sure?" %>
          it or view the
          <%= link_to 'complete list', root_path %>.
        <% end %>
      <% end %>
      <br/><br/>
    </i></b>
  </div>
  <%= f.text_area :description, :id => "description_area" %>
  <%= f.submit :id => "post_button" %>
<% end %>
