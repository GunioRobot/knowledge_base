#fact-show
  #gravatar= gravatar_image_tag(@fact.user.email)
  = link_to "#comments" do
    #comments-wrapper
      - nc = @fact.comments.size
      - nc = "#{99}+" if nc > 99
      #comments= nc
  #links
    - if @fact.user == current_user
      = button_to 'Edita', edit_fact_path(@fact), :method => :get, :class => "button"
      = button_to 'Elimina', fact_path(@fact), :confirm => "Are you sure?", :method => :delete, :class => "button" |
  #head
    %h2= @fact.title
    #metadata
      Creat el #{@fact.created_at} per
      = get_name_or_you(@fact.user)
  #text
    = get_markdown_html(@fact.description)
  %hr
  = render "tags"
  %hr
  = render "comments"
